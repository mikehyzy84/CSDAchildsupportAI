{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [{ "path": "/api/sync", "schedule": "0 12 * * *" }],
  "functions": {
    "api/auth/profile.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
